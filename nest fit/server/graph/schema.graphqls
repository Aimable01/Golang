type Query {
  hello: String!
  user(username: String!): User!
}

type User {
  id: ID!
  name: String!
  username: String!
  email: String!
  profilePicture: String!
}

input RefreshTokenInput {
  token: String!
}

input NewUser {
  name: String!
  username: String!
  email: String!
  password: String!
}

input LoginInput {
  usernameOrEmail: String! # username or email
  password: String!
}

# file upload
scalar Upload

type Mutation {
  createUser(input: NewUser!): String!
  login(input: LoginInput!): String!
  refreshToken(input: RefreshTokenInput!): String!

  uploadProfilePicture(file: Upload!): String!
}
